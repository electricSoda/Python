WindowManager:
    LoginWindow:
    NavigatorWindow:

<LoginWindow>:
    name: "Login"

    username:username
    password:password

    GridLayout:
        cols:1

        GridLayout:
            cols:2

            Label:
                font_size: 45
                text:"Username:"

            TextInput:
                id:username
                multiline:False

            Label:
                font_size: 45
                text:"Password:"

            TextInput:
                id:password
                multiline:False
                password: True

        Button:
            font_size: 40
            text:"Login"
            size_hint: 0.1, 0.4
            on_release:
                ##Change the 'Username' to your prefered username!
                ##Also change the 'Password' to you prefered password!
                app.root.current = "Auxiliary Navigator"  if username.text == 'Justin' and password.text == 'Password' else 'Login'
                username.text = ""
                password.text = ""
                root.manager.transition.direction="up"


<NavigatorWindow>:
    name: "Auxiliary Navigator"

    GridLayout:
        cols:2

        Button:
            text: "Sign Out"
            on_release:
                app.root.current = "Login"
                root.manager.transition.direction="down"



<P>:
    Label:
        text: "Error: Invalid username or password."
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}
    Label:
        text: "Please try again."
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "y":0.7}
